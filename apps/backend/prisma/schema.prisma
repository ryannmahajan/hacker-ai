generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://cohort_owner:4tQE1rAilDqY@ep-purple-frost-a5ukpida.us-east-2.aws.neon.tech/cohort?sslmode=require"
}
model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  name String
  age Int
  gender String
  bloodReports bloodReport[]
  liverReport liverReport[]
}

model bloodReport {
  id Int @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
  reportDate DateTime
  hemoglobin Decimal
  packedCellVolume Decimal
  rbcCount Decimal
  mcv Decimal
  mentzerIndex Decimal
  mch Decimal
  mchc Decimal
  redCellDistributionWidth Decimal
  totalLeukocyteCount Decimal

  segmentedNeutrophilsDiff Decimal
  lymphocytesDiff Decimal
  monocytesDiff Decimal
  eosinophilsDiff Decimal
  basophilsDiff Decimal

  neutrophils Decimal
  lymphocytes Decimal
  monocytes Decimal
  eosinophils Decimal
  basophils Decimal
  plateletCount Decimal
  meanPlateletVolume Decimal

  summary String
}

model liverReport {
  id Int @id @default(autoincrement())
  userId Int @unique
  user   User @relation(fields: [userId], references: [id])
  reportDate DateTime
  meanPlateletVolume Decimal

  altSgpt Decimal
  astSgot Decimal
  astAltRatio Decimal
  alpAlkalinePhosphatase Decimal
  ggt Decimal
  totalBilirubin Decimal
  directBilirubin Decimal
  indirectBilirubin Decimal
  albumin Decimal
  totalProtein Decimal
  agRatio Decimal

  summary String
}